<h3>Top Questions</h3>
<div class="all-questions">
  <% @questions.each do |question| %>
    <div class="question-container row">
    	<div class="col-md-12">
    	<span class="question-stats col-md-3">
    		<span class="stat col-md-3">
	     	  <% count = 0 %>
          <% question.votes.each do |vote| %>
            <% count += vote.value %>
          <% end %>
          Votes: <%=  count %>
	     	</span>
	     	<span class="stat col-md-3">
	     		<%= question.answers.count %> Answers
	     	</span>
	     	<span class="stat col-md-3">
	     		<%= question.unique_impression_count.values.join %> views
	      </span>
     	</span>
	     	<div class=" question-title col-md-9">
	     		<%= link_to question.title, question_path(question.id) %>
	     	</div>
     	</div>
    </div>
  <% end %>
</div>


